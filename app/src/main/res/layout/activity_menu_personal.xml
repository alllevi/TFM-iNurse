<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tfm.muuinf.viciano.lledo.alejandro.inurse.GUI.personal.MenuPersonalActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="@string/ver_solicitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_menu_personal_solicitudes" />

        <Button
            android:text="@string/mapa_camas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_menu_personal_mapa" />

        <Button
            android:text="@string/menus_encargados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_menu_personal_menus" />

        <Button
            android:text="@string/configurar_avisos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_menu_personal_configurar" />

        <Button
            android:text="@string/cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_menu_personal_cerrar_sesion"
            style="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>
</RelativeLayout>
